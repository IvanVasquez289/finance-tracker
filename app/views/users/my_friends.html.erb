<h1 class='mb-5 text-center mt-3 display-4 fw-bold'>Amigos</h1>

<div class="mt-5 row justify-content-md-center buscador">
  <div class="col-md-10">
    <h3>Buscar amigos</h3>  
    <%= form_tag search_friend_path,remote: true, method: :get do%>
      <div class="input-group shadow">
          <%# <input type="text" class="form-control form-control-lg" placeholder="Search Here"> %>
          <%= text_field_tag :friend, params[:friend], placeholder:'Nombre o correo; prueba escribiendo @', autofocus:true, class:'form-control form-control-lg' %>
          <button type="submit" class="input-group-text btn text-white" style="background-color: #5465FF;"><i class="bi bi-search me-2"></i>Buscar</button>
        
      </div>
    <% end %>
  </div>
</div>

<div id="amigo-resultado">

</div>

<% if !@mis_amigos.empty? %>
  <%= render 'friends/list' %>
<% else %>
  <div class="p-5 mb-4 mt-4 rounded-3 shadow text-white" style="background-color: #5465FF;">
